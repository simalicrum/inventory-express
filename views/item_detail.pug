extends layout

block content
  div(class="m-8")
    div(class="space-y-2")
      a(href=item.url class="text-4xl text-gray-900") #{item.name}
      p(class="text-gray-700 text-xl") #{item.description}
      p(class="text-lg text-gray-500 font-semibold") CAD $#{item.price}
      p(class="text-lg text-gray-500") #{item.number} in stock
      div
        each catagory in item.catagories
          span(class="my-4 text-xs text-green-400 bg-green-100  border-green-200 py-1 px-2 rounded-md")
            a(href=catagory.url) #{catagory.name}
    div(class="my-8 flex justify-between")
      a(class="text-gray-400 border-2 border-gray-400 py-2 px-8 rounded" href=item.url + "/update") Edit
      a(class="text-red-100 bg-red-600 py-2 px-8 rounded" href=item.url + "/delete") DELETE