extends layout

block content
  h1(class="text-4xl text-gray-900 m-8") #{title}
  div(class="mt-8 max-w-md m-8")
    form(class="grid grid-cols-1 gap-6" method="POST" action="")
      label(class="block")
        span(class="text-gray-700") Catagory name
        input(type="text" name="name" class="mt-1 block w-full rounded-md bg-gray-200 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0" placeholder="" value=catagory.name)
      label(class="block")
        span(class="text-gray-700") Catagory description
        textarea(name="description" class="mt-1 block w-full rounded-md bg-gray-200 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0" rows="3" style="margin-top: 4px; margin-bottom: 0px; height: 85px;") #{catagory.description}
      button(class="text-gray-400 border-2 border-gray-400 py-2 px-8 rounded" type="submit") #{title}
  if errors
    each error in errors
      div(class="m-8 text-red-700") #{error.msg}