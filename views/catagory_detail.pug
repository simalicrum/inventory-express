extends layout

block content
  h1(class="text-4xl text-gray-900 m-8") #{catagory.name}
    div(class="text-gray-700 text-xl mt-2") #{catagory.description}
  ul
    each item in catagory_items
      li
        div(class="rounded bg-white shadow-lg p-8 mx-8 my-4 space-y-1")
          a(href=item.url class="text-xl text-gray-900") #{item.name}
          p(class="text-gray-700") #{item.description}
          p(class="text-sm text-gray-500 font-semibold") CAD $#{item.price}
          p(class="text-sm text-gray-500") #{item.number} in stock
  div(class="m-8 flex justify-between")
      a(class="text-gray-400 border-2 border-gray-400 py-2 px-8 rounded" href=catagory.url + "/update") Edit
      if !catagory_items.length
        a(class="text-red-100 bg-red-600 py-2 px-8 rounded" href=catagory.url + "/delete") DELETE CATAGORY